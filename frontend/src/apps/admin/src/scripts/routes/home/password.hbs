<div>
    <script id="password-partial" type="text/x-handlebars-template">
        <form class="cd-form" action="/users/update" method="post">
            {{#if superAdmin}}
                <div class="form-group">
                    <div class="col-sm-10">
                        <input type="hidden" class="form-control" name="_action" id="_action" value="reset" />
                    </div>
                </div>
                <div class="form-group">
                    <input class="full-width has-padding" type="submit" value="重置密码">
                </div> 
            {{else}}
                <div class="form-group">
                    <div class="col-sm-10">
                        <input type="hidden" class="form-control" name="_action" id="_action" value="update" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="password">新密码：</label>
                    <div class="col-sm-5">
                        <input type="password" class="form-control" name="password" />
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-default pull-right save-btn button" type="button">保存</button>
                </div>
            {{/if}}
        </form>
    </script>
</div>
