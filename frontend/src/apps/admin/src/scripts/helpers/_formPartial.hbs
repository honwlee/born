<div>
    <script id="page-form-partial" type="text/x-handlebars-template">
        <form class="form-horizontal admin-form form" id="pageForm" role="form">
            <div class="form-group">
                <div class="col-sm-10">
                    <input type="hidden" class="form-control" name="id" id="id" value="{{id}}" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="name">名称</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="name" value="{{name}}" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="title">标题</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="title" value="{{title}}" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">页面类型</label>
                <div class="col-sm-10">
                    <select class="form-control related" name="type" id="type" data-related=".parent-page-selector@sub@pages">
                        <option value="main" select=true>主页面</option>
                        <option value="sub">子页面</option>
                    </select>
                </div>
            </div>
            <div class="form-group hide parent-page-selector">
                <label class="col-sm-2 control-label">父页面</label>
                <div class="col-sm-10">
                    <select class="form-control hide" name="parent" id="parentPageSelect">
                        
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="name">路由</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="pathto" value="{{pathto}}" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">隐藏</label>
                <div class="col-sm-10">
                    <input class="form-control" type="checkbox" name="hide" value="{{hide}}">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">位置</label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" value="{{postion}}" name="postion">
                </div>
            </div>
        </form>
    </script>
    <script id="page-cog-partial" type="text/x-handlebars-template">
        <form class="form-horizontal admin-form form" id="pageForm" role="form">
            <div class="form-group">
                <label class="col-sm-2 control-label">内容类型</label>
                <div class="col-sm-10">
                    <select class="form-control related" name="type" id="type" data-related=".parent-page-selector@sub@pages">
                        <option value="slide" select=true>slide</option>
                        <option value="post">文章</option>
                        <option value="photo">图片</option>
                    </select>
                </div>
            </div>
            <div class="form-group hide parent-page-selector">
                <label class="col-sm-2 control-label">选择slide</label>
                <div class="col-sm-10">
                    <select class="form-control hide" name="parent" id="parentPageSelect">
                        
                    </select>
                </div>
            </div> 
            <div class="form-group hide parent-page-selector">
                <label class="col-sm-2 control-label">选择文章</label>
                <div class="col-sm-10">
                    <select class="form-control hide" name="parent" id="parentPageSelect">
                        
                    </select>
                </div>
            </div> 
            <div class="form-group hide parent-page-selector">
                <label class="col-sm-2 control-label">选择图片</label>
                <div class="col-sm-10">
                    <select class="form-control hide" name="parent" id="parentPageSelect">
                        
                    </select>
                </div>
            </div> 
        </form>
    </script>
    <script id="post-form-partial" type="text/x-handlebars-template">
        <form class="form-horizontal admin-form form" id="pageForm" role="form">
            <div class="form-group">
                <div class="col-sm-10">
                    <input type="hidden" class="form-control" name="id" id="id" value="{{id}}" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="title">标题</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="title" value="{{title}}" placeholder="请输入页面标题" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="content">页面内容</label>
                <div class="col-sm-10 textarea content">
                    <textarea class="editable" id="simplemde" name="content" value="{{content}}"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="publishedDate">发布时间</label> {{> date-picker-partial formName='publishedDate'}}
            </div>
        </form>
    </script>
    <script id="photo-form-partial" type="text/x-handlebars-template">
        <form class="form-horizontal admin-form form" id="pageForm" role="form">
             <div class="form-group">
                <label class="col-sm-2 control-label" for="name">名称</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="name" value="{{name}}" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="file">缩略图</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control file" name="file" id="file" />
                    <p class="fieldset info text-right"><span class="text-warning text-info">缩略图格式只支持gif、jpg或者png！</span></p>
                </div>
            </div>
            <div class="form-group text-center">
                <img src="{{imagePath}}" />
            </div>
        </form> 
    </script>
    <script id="news-form-partial" type="text/x-handlebars-template">
        <form class="form-horizontal admin-form form" id="pageForm" role="form">
            <div class="form-group">
                <div class="col-sm-10">
                    <input type="hidden" class="form-control" name="id" id="id" value="{{id}}" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="title">标题</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="title" value="{{title}}" placeholder="请输入文章标题" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="content">新闻内容</label>
                <div class="col-sm-10 textarea content">
                    <textarea class="editable" id="simplemde" name="content" value="{{content}}"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="publishedDate">发布时间</label> {{> date-picker-partial formName='publishedDate'}}
            </div>
        </form>
    </script>
</div>